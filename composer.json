{
    "name": "ambaciaddis/visa-chatbot",
    "description": "Visa Chatbot OCR System - Ambassade de Cote d'Ivoire",
    "type": "project",
    "license": "proprietary",
    "autoload": {
        "psr-4": {
            "VisaChatbot\\": "php/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "VisaChatbot\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.1",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5"
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage/",
        "test:unit": "phpunit --testsuite=Unit",
        "test:integration": "phpunit --testsuite=Integration"
    },
    "config": {
        "sort-packages": true
    }
}
